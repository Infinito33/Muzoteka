@model IEnumerable<Muzoteka.Models.playlista>

@{
    ViewBag.Title = "Playlisty";
}

<h2>Playlisty</h2>

<p>
    @Html.ActionLink("Dodaj nową playlistę", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.data_utworzenia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.opis)
        </th>
        <th>Akcje</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.data_utworzenia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.opis)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.id }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Szczegóły", "Details", new { id=item.id }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Usuń", "Delete", new { id=item.id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
