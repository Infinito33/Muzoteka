@model Muzoteka.Models.utwor
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron  text-center" style="background: url(../../Content/nuty.jpg) no-repeat center; height: 450px; background-size: cover; padding: 100px 0px 100px 0px">
    <h1>Muzoteka</h1>
    <p class="lead">Najlepsza muzyka w jednym miejscu</p>
</div>

<div class="row text-center">
    <h3>Wyszukiwarka utworów</h3>
    <div>
        <div class="form-inline">
            @Html.AntiForgeryToken()
            <div>
                @using (Html.BeginForm("SearchedTracks", "Utwors"))
                {
                    <input class="form-control" type="text" name="trackName" />
                    <input class="btn btn-primary" type="submit" value="Wyszukaj"/>
                }
            </div>
        </div>
    </div>
</div>